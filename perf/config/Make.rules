#
# Development tree check if ICE_HOME isn't set.
#
ifeq ($(ICE_HOME),)
    ifeq ($(shell test -d $(top_srcdir)/../ice/slice && echo 0),0)
	ICE_HOME=$(top_srcdir)/../ice
    endif
endif

OPTIMIZE_SPEED		= yes
OPTIMIZE		= yes

SHELL			= /bin/sh


UNAME			:= $(shell uname)

EVERYTHING		= all depend clean install

all:: $(SRCS) $(TARGETS)

clean::
	-rm -f $(TARGETS)
	-rm -f core *.o *.pyc *.bak

ifneq ($(SLICE_SRCS),)
clean::
	rm -f $(addsuffix .cpp, $(basename $(notdir $(SLICE_SRCS))))
	rm -f $(addsuffix .h, $(basename $(notdir $(SLICE_SRCS))))
endif

