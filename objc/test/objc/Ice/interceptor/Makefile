top_srcdir	= ../../../..

CLIENT		= client

TARGETS		= $(CLIENT)

OBJS		= InterceptorTest.o \
		  Client.o \
		  InterceptorI.o \
		  MyObjectI.o

SRCS		= $(OBJS:.o=.m)

SLICE_SRCS	= InterceptorTest.ice

include $(top_srcdir)/config/Make.rules

ifeq ($(COMPILE_WITH_GC),yes)
   CPPFLAGS		:= -DICE_OBJC_GC $(CPPFLAGS)
endif

CPPFLAGS	:= -I. -I.. -I../../include $(CPPFLAGS)
LIBS		:= -lTestCommon $(LIBS)

$(CLIENT): $(ICEOBJCLIB) $(OBJS)
	rm -f $@
	$(CXX) $(LDFLAGS) $(STATICLIBSTDFLAG) -o $@ $(OBJS) $(LIBS)

include .depend
