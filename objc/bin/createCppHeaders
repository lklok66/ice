if [ $# != 2 ]
then 
   echo Usage: ${0} \<source-include\> \<destination-include\>
   exit 1
fi

source=${1}
dest=`cd ${2}; pwd`

cd $source

commands=
tokens=

for i in *
do
   if [ -d $i ]
   then 
      commands="${commands}s%${i}/%${i}Cpp/%g;"
      tokens="${tokens} $i"
   fi
done

for i in $tokens
do 
   desti=${dest}/${i}Cpp
   if [ ! -d $desti ]; then mkdir $desti ; fi

   echo Processing $i headers
   cd $i
   for h in *.h
   do
      sed -e ${commands} $h > ${desti}/${h} 
   done
   cd ..
done






