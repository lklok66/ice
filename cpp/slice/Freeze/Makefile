top_srcdir	= ../..

include $(top_srcdir)/config/Make.rules

install::
	@if test ! -d $(install_slicedir)/Freeze ; \
	then \
	    echo "Creating $(install_slicedir)/Freeze..." ; \
	    $(call mkdir,$(install_slicedir)/Freeze) ; \
	fi

	@for i in *.ice ; \
	do \
	    echo "Installing $$i" ; \
	    $(call installdata,$$i,$(install_slicedir)/Freeze) ; \
	done
