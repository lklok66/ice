<project name="demo_Freeze_transform" default="all" basedir=".">

    <!-- set global properties for this build -->
    <property name="top.dir" value="../../.."/>
    
    <!-- import common definitions -->
    <import file="${top.dir}/config/common.xml"/>

    <target name="generate" depends="init">
        <!-- Create the output directory for generated code -->
        <mkdir dir="${generated.dir}"/>
        <slice2java outputdir="${generated.dir}">
	    <meta value="${java2metadata}"/>
             <includepath>
                <pathelement path="." />
            </includepath>
            <fileset dir="." includes="ContactData.ice, NewContactData.ice"/>
        </slice2java>

        <slice2freezej outputdir="${generated.dir}">
	    <meta value="${java2metadata}"/>
             <fileset dir="." includes="ContactData.ice,NewContactData.ice"/>
	    <dict name="Demo.Contacts" key="string" value="Demo::ContactData"/>
            <dict name="Demo.NewContacts" key="string" value="Demo::NewContactData"/>
            <dictindex name="Demo.Contacts" member="phoneNumber" casesensitive="no"/>
            <dictindex name="Demo.NewContacts" member="phoneNumber" casesensitive="no"/>
        </slice2freezej>

    </target>

    <target name="compile" depends="generate">
        <mkdir dir="${class.dir}"/>
        <javac srcdir="${generated.dir}" destdir="${class.dir}"
	    debug="${debug}">
            <classpath>
                <path refid="ice.classpath"/>
                <path refid="db.classpath"/>
            </classpath>
	    <compilerarg value="${javac.lint}"/>
        </javac>
	<javac srcdir="." destdir="${class.dir}"
            excludes="generated/**" debug="${debug}">
            <classpath refid="ice.classpath"/>
	    <compilerarg value="${javac.lint}"/>
        </javac>
    </target>

    <target name="all" depends="compile"/>

   <target name="cleandb">
        <delete>
	    <fileset dir="db" includes="log.*"/>
            <fileset dir="db" includes="__catalog,__catalogIndexList"/>
            <fileset dir="db" includes="contacts, contacts.phoneNumber"/>
            <fileset dir="db" includes="__db.*"/>
            <fileset dir="dbnew" includes="log.*"/>
            <fileset dir="dbnew" includes="__catalog,__catalogIndexList"/>
            <fileset dir="dbnew" includes="contacts, contacts.phoneNumber"/>
            <fileset dir="dbnew" includes="__db.*"/> 
        </delete>
    </target>


    <target name="clean" depends="cleandb">
        <delete dir="${generated.dir}"/>
        <delete dir="${class.dir}"/>
    </target>

</project>
