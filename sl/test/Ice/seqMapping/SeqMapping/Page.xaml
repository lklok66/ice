<UserControl x:Class="SeqMapping.Page"
    xmlns="http://schemas.microsoft.com/client/2007" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="640" Height="480">
    <Grid x:Name="LayoutRoot" Background="White">
        <Canvas x:Name="Button1">
            <Rectangle Stroke="Black" StrokeThickness="2" RadiusX="2" RadiusY="2" Height="23" Width="75">
                <Rectangle.Fill>
                    <SolidColorBrush Color="#064280" />
                </Rectangle.Fill>
            </Rectangle>
            <TextBlock Canvas.Top="3" Canvas.Left="10" FontSize="12" Foreground="White" Text="Click Me" />
        </Canvas>
        
        <Canvas x:Name="Button2">
            <TextBlock Canvas.Top="50" Canvas.Left="10" FontSize="12"/>
        </Canvas>
    </Grid>
</UserControl>
