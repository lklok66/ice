#
# Xcode root directory. If you have several Xcode versions installed,
# choose the version you want to use to build the Xcode The default 
# is the one installed in "/Applications/Xcode.app".
#
#XCODE_PATH          = /Applications/Xcode.app

#
# The default is 43 for Xcode 4.3.x.
#
#XCODE_VERSION		?= 43

#
# Install the Xcode plug-in for all users. Default is to install
# to the user home dir.
#
#XCODE_PLUGIN_ALL_USERS		= yes

# ----------------------------------------------------------------------
# Don't change anything below this line!
# ----------------------------------------------------------------------

ifeq ($(XCODE_VERSION),)

XCODE_VERSION = 43

endif

XCODE_VERSION_MAJOR := $(shell v="$(XCODE_VERSION)"; echo "$${v:0:1}")
XCODE_VERSION_MINOR := $(shell v="$(XCODE_VERSION)"; echo "$${v:1:1}")

ifeq ($(XCODE_PATH),)

XCODE_PATH = /Applications/Xcode.app

endif

DEVELOPER_PATH = $(XCODE_PATH)/Contents/Developer/
XCODE_SDK_PATH = $(XCODE_PATH)/Contents/PlugIns/Xcode3Core.ideplugin/Contents/Frameworks/


ifeq ($(XCODE_PLUGIN_ALL_USERS),yes)
    XCODE_PLUGIN_INSTALL_PATH = /Library/Application Support/Developer/$(XCODE_VERSION_MAJOR).$(XCODE_VERSION_MINOR)/Xcode/Plug-ins
else
    XCODE_PLUGIN_INSTALL_PATH = $(HOME)/Library/Application Support/Developer/$(XCODE_VERSION_MAJOR).$(XCODE_VERSION_MINOR)/Xcode/Plug-ins
endif
