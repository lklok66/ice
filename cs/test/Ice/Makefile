top_srcdir	= ../..

include $(top_srcdir)/config/Make.rules.cs

SUBDIRS		= application \
		  adapterDeactivation \
		  exceptions \
		  facets \
		  faultTolerance \
		  inheritance \
		  hold \
		  location \
		  objects \
		  binding \
		  proxy \
		  operations \
		  slicing \
		  checksum \
		  stream \
		  retry \
		  timeout \
		  servantLocator \
                  interceptor \
                  dictMapping \
                  seqMapping \
                  background \
		  udp

$(EVERYTHING)::
	@for subdir in $(SUBDIRS); \
	do \
	    echo "making $@ in $$subdir"; \
	    ( cd $$subdir && $(MAKE) $@ ) || exit 1; \
	done

test::
	@python $(top_srcdir)/allTests.py
